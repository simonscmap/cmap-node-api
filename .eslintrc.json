{
  "env": { "es6": true },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-unused-vars": "error",
    "no-undef": "error",
    "no-unexpected-multiline": "off",
    "curly": ["error", "multi-line", "consistent"],
    "no-nested-ternary": "off", 
    "indent": ["error", 2, { "offsetTernaryExpressions": true }]
    
  },
  "globals": {
    "module": "readonly",
    "require": "readonly",
    "console": "readonly",
    "__dirname": "readonly",
    "process": "readonly",
    "Promise": "readonly"
  },
  "extends": "eslint:recommended"
}
